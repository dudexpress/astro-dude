---
interface Props {
  title?: string;
  publisher?: string[];
  designer?: string[];
  trait?: "green" | "orange" | "pink";
  className?: string;
}

const designersAndPublisher = [
  ...(Astro.props.designer ?? []),
  ...(Astro.props.publisher ?? []),
].join(" ‚óè ");
---

<div class="my-10 first:mt-0">
  {
    Astro.props.title && (
      <>
        {designersAndPublisher && (
          <h4 class="font-bold uppercase text-sm font-sans mb-1">{designersAndPublisher}</h4>
        )}
        <h2 class="text-4xl mb-1 font-sans">{Astro.props.title}</h2>
        <div
          class:list={[
            "w-[100px] h-[5px] mb-3",
            {
              "bg-green": Astro.props.trait === "green",
              "bg-orange": Astro.props.trait === "orange",
              "bg-pink": Astro.props.trait === "pink",
            },
          ]}
        />
      </>
    )
  }
  <slot name="afterTitle" />
  <slot />
</div>
