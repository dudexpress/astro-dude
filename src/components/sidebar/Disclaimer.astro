---
interface Props {
  type: string;
}

const { type } = Astro.props;

function getContent(type: string) {
  switch (type) {
    case "next":
      return "I voti e i giudizi sono relativi solamente alle <strong>informazioni presenti online</strong> analizzate grazie ai nostri sofisticatissimi strumenti di laboratorio!";
    default:
      return "I voti e i giudizi sono relativi solamente alla <strong>copia</strong> analizzata grazie ai nostri sofisticatissimi strumenti di laboratorio!";
  }
}

if (type === "review") {
  return null;
}

const content = getContent(type);
---

<div class="disclaimer mb-5">
    <h5 class="font-semibold text-xl text-gray300 mb-0.5">Disclaimer</h5>
