---
import {buildPosts, getPostFiles, slug} from "../../utils.ts";
import NavLinks from "../../layouts/NavLinks.astro";

const allFiles = await buildPosts(getPostFiles());
const publishers = [...new Set(allFiles.flatMap(x => x.frontmatter.publisher).filter(Boolean))].sort();
---

<NavLinks title="Editori" items={publishers.map(name => ({name, url: `/publishers/${slug(name)}`}))}/>
